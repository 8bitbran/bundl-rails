<h1 class="text-center mt-4">Start a new group</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= simple_form_for @group do |f| %>
                <div class="form-inputs">
                    <%= f.input :user_id, :as => "hidden", :input_html => { :value => current_user.id } %>

                    <%= f.input :name,
                            required: true,
                            label: "Name",
                            placeholder: "Group Name",
                            autofocus: true %>
                    
                    <%= f.input :topic_id,
                            collection: Topic.all,
                            label_method: :title,
                            value_method: :id,
                            label: "Category",
                            prompt: "Select Category",
                            required: true %>

                    <%= f.input :location, 
                            required: true,
                            label: "Hometown",
                            placeholder: "City, State",
                            autofocus: true %>

                    <%= f.input :description,
                            as: :text, 
                            required: true,
                            label: "Description",
                            placeholder: "Enter up to 500 characters",
                            autofocus: true %>

                    <%= simple_fields_for :group_tags do |ff| %>
                        <%= ff.input :tag_list,
                                as: :text,
                                required: false, 
                                label: "Tags",
                                placeholder: "Enter comma-seperated values",
                                autofocus: true %>
                    <% end %>
                </div>      
                
                <div class="form-actions p-2 mb-2 row justify-content-center">
                    <%= f.button :submit, "Create Group", class: "btn btn-primary" %>
                </div>
            <% end %>
        </div>
    </div>
</div>