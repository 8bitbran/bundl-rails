<div class="container">
    <h1 class="text-center">Browse Groups</h1>

    <div class="text-center">
        <%= form_with(url: '/groups', method: 'get', local: true) do %>
            <%= text_field_tag :search, nil, placeholder: 'Enter a name' %>
            <%= submit_tag("Search") %>
        <% end %>
        <%= link_to "Search by tag", new_search_path %>
    </div>

    <% @groups.each do |group| %>
        <div class="row justify-content-center mt-4">
            <div class="col-12 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounder">
                    <div class="card-header font-italic">
                       by <%= group.user.name %>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title"><%= link_to group.name, group_path(group), class: "text-success" %></h5>
                        <p class="card-text font-italic"><%= group.location %></p>
                        <p class="card-text"><%= truncate(group.description, length: 100) %></p>

                        <%= link_to "View Group", group_path(group), class: "btn btn-outline-success" %>
                    </div>

                     <div class="card-footer text-muted">
                        <small>Founded <%= group.created_at.strftime("%B %d, %Y") %></small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>