<div class="container">
    <h2 class="text-center mt-4">Log in</h2>
    <p class="text-center">Hey! Welcome back.</p>
    <%= link_to 'Log in with Facebook', user_facebook_omniauth_authorize_path, class: "row justify-content-center mb-5" %>
    <div class="row justify-content-center">
        <div class="col-10">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                    <%= f.input :email,
                            required: false,
                            label: "Email",
                            autofocus: true,
                            input_html: { autocomplete: "email" }%>

                    <%= f.input :password,
                            required: false, 
                            autofocus: true,
                            input_html: { autocomplete: "current-password" }%>

                    <%# <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>

                <div class="form-actions p-2 mb-2 row justify-content-center">
                    <%= f.button :submit, "Login", class: "btn btn-primary" %>
                </div>
            <% end %>
        </div>
    </div>
</div>