<p>Event date</p>
<h1><%= @event.title %></h1>

<p>image</p>

<h2>Details</h2>
<p><%= @event.description %></p>

<div class="group-info">
    <h3>Group Info</h3>
    <strong><%= @event.group.name %></strong><br>
    <i><%= @event.group.location %></i>
</div>

<div class="event-info">
    <h3>Event Info</h3>
    <p>Event date</p>
    <p>Event startime - Event endtime</p>
    <i><%= @event.location %></i>
    <% rsvp = @event.rsvps.where("user_id = ?", current_user.id) %>
    <% if rsvp.empty? %>
        <%= button_to "Going", rsvps_path(rsvp: {event_id: @event.id} ), method: :post, class: "rsvp-button" %>
    <% else %>
        <%= button_to "Cancel RSVP", rsvp.first, method: :delete, class: "rsvp-button cancel" %>
    <% end %>
</div>

