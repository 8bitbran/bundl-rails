<div class="container min-vh-100">
    <h1 class="text-center">Create a new event</h1>
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'errors' %>
            <%= simple_form_for(@event) do |f| %>
                <div class="form-inputs">

                    <%= f.input :title,
                            required: true, 
                            label: "Title",
                            autofocus: true %>

                    <%= f.input :group_id,
                            collection: @user_groups,
                            label_method: :name,
                            value_method: :id,
                            label: "Group",
                            prompt: "Select Category",
                            selected: params[:group_id],
                            required: true %>

                    <%= f.input :description,
                            required: true,
                            label: "Description",
                            autofocus: true %>

                    <%= f.input :location,
                            required: true,
                            label: "Location",
                            autofocus: true %>

                    <%= f.input :starttime,
                            as: :datetime,
                            order: [:month, :day, :year],
                            ampm: true,
                            required: true,
                            label: "Start Time" %>

                    <%= f.input :endtime,
                            as: :datetime,
                            order: [:month, :day, :year],
                            ampm: true,
                            required: true,
                            label: "End Time" %>
                </div>

                <div class="form-actions p-2 mb-2 row justify-content-center">
                    <%= f.button :submit, "Create Event", class: "btn btn-primary" %>
                </div>
                
            <% end %>
        </div>
    </div>
</div>