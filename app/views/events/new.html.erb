<h2 class="text-center mt-4">Create a new event</h2>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= simple_form_for(@event) do |f| %>
                <div class="form-inputs">

                    <%= f.input :group_id, :as => :hidden, :input_html => { :value => @group } %>

                    <%= f.input :title,
                            required: true, 
                            label: "Title",
                            autofocus: true %>

                    <%= f.input :description,
                            required: true,
                            label: "Description",
                            autofocus: true %>

                    <%= f.input :location,
                            required: true,
                            label: "Location",
                            autofocus: true %>

                    <%= f.input :starttime,
                            as: :datetime,
                            order: [:month, :day, :year],
                            ampm: true,
                            required: true,
                            label: "Start Time" %>

                    <%= f.input :endtime,
                            as: :datetime,
                            order: [:month, :day, :year],
                            ampm: true,
                            required: true,
                            label: "End Time" %>
                </div>

                <div class="form-actions p-2 mb-2 row justify-content-center">
                    <%= f.button :submit, "Create Event", class: "btn btn-primary" %>
                </div>
                
            <% end %>
        </div>
    </div>
</div>