<h1>Create a new event</h1>

<%= form_with scope: :event, urL: events_path, local: true do |f| %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>

    <p> 
        <%= f.label :location %><br>
        <%= f.text_field :location %>
    </p>

    <p> 
        <%= f.label :description %><br>
        <%= f.text_area :description %>
    </p>

    <p>
        <%= f.submit "Create Event" %>
    </p>
<% end %>