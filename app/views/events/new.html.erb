<h1>Create a new event</h1>

<%= form_with scope: :event, url: events_path, local: true do |f| %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>

    <p> 
        <%= f.label :description %><br>
        <%= f.text_area :description %>
    </p>

    <p>
        <%= f.label :group_id, "Event Group" %><br>
        <%= f.collection_select :group_id, Group.order(:name),:id,:name, include_blank: true %>
    </p>

    <p> 
        <%= f.label :location %><br>
        <%= f.text_field :location %>
    </p>

    <p>
        <%= f.label :starttime, "Start Time" %><br>
        <%= f.datetime_select(:starttime, order: [:month, :day, :year], ampm: true) %>
    </p>

    <p> 
        <%= f.label :endtime, "End Time" %><br>
        <%= f.datetime_select(:endtime, order: [:month, :day, :year], ampm: true) %>
    </p>

    <p>

    </p>

    <p>
        <%= f.submit "Create Event" %>
    </p>
<% end %>